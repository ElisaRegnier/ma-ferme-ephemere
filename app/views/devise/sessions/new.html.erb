<h1 style="text-align: center; margin-top: 30px; margin-bottom: 30px;">Connexion</h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-padded">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-content">
          <div class="form-inputs" >
            <%= f.input :email, required: false, autofocus: true, class: "custom-field" %>
            <%= f.input :password, required: false, class: "custom-field" %>
          </div>
          <div class="connect-field">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Se connecter", class: "button-very-green" %>
          </div>
          <div class="links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

